<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeColor="?attr/colorPrimary"
    app:strokeWidth="1dp"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Added title here -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Information"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="?attr/colorPrimary"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDoctorSpecialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Specialty: "
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDoctorDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Department: "
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDoctorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Email: "
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDoctorGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gender: "
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDoctorContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Contact: "
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditDoctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorPrimary"
                android:textColor="?attr/colorPrimary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteDoctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Delete"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="?attr/colorPrimary"
                app:rippleColor="?android:attr/colorControlHighlight"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>