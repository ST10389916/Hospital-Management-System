<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/light_gray_background"
    tools:context=".PatientRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar with back button -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F4ABA7"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Patient Record"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Patient Record"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Main content card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Medical Information"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Patient selection dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    android:hint="Select Patient">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:clickable="true"
                        android:focusable="false"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Illness input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/illnessInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp"
                    android:hint="Patient's Illness">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextIllness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_sick"
                        android:drawablePadding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Medical number input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/medicalNoInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp"
                    android:hint="Medical Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditMedicalNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_number"
                        android:drawablePadding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Medication input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/medicationInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp"
                    android:hint="Medication">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextMedication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_medical"
                        android:drawablePadding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Allergy spinner -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allergy"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    android:hint="Select Allergy">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerAllergy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:clickable="true"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:entries="@array/allergy"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Treatment input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/treatmentInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="24dp"
                    android:hint="Treatment">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextTreatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_injection"
                        android:drawablePadding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Submit button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="SUBMIT RECORD"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/primary_color"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Help text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: All information will be securely stored in the patient's medical record."
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_margin="16dp"/>
    </LinearLayout>
</ScrollView>