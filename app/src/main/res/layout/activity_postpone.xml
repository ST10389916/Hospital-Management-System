<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/light_gray_background"
    tools:context=".PostponeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar with back button -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F4ABA7"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Postpone Appointment"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Postpone Appointment"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Main content card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Postpone Your Appointment"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Appointment number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment Reference:"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/appointmentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APT-2023-00567"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:layout_marginBottom="24dp" />

                <!-- Timeframe selection -->
                <TextView
                    android:id="@+id/timeframe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select New Timeframe:"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/timeframeInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    android:hint="Select a timeframe">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerAvailability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:clickable="true"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:background="@null"
                        android:dropDownHeight="wrap_content"
                        android:dropDownWidth="match_parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select New Date:"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:textSize="16sp"
                        android:hint="MM/DD/YYYY"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Submit button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="SUBMIT REQUEST"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_schedule"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    app:backgroundTint="@color/teal_700" />  <!-- Changed button color to Material Blue -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Help text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Your request will be processed within 24 hours. You'll receive a confirmation once approved."
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_margin="16dp" />
    </LinearLayout>
</ScrollView>
